<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Attribute value definitions  -->
    <attr name="colorTheme" format="enum">
        <enum name="light" value="0" />
        <enum name="light_mono" value="1" />
        <enum name="dark" value="2" />
        <enum name="dark_mono" value="3" />
    </attr>
    <attr name="calloutBorderStyle" format="enum">
        <enum name="square" value="0" />
        <enum name="slight_round" value="1" />
        <enum name="pill" value="2" />
        <enum name="custom" value="3" />
        <enum name="none" value="4" />
    </attr>
    <attr name="borderStyle" format="enum">
        <enum name="square" value="0" />
        <enum name="slight_round" value="1" />
        <enum name="custom" value="2" />
        <enum name="none" value="3" />
    </attr>
    <attr name="customBorderRadius" format="integer" />
    <attr name="customBorderColor" format="color" />
    <attr name="catchLogoSize" format="enum">
        <enum name="small" value="0" />
        <enum name="medium" value="1" />
        <enum name="fill" value="2" />
    </attr>

    <!--  View attributes  -->
    <declare-styleable name="CalloutView">
        <attr name="calloutBorderStyle" />
        <attr name="hasOrPrefix" format="boolean" />
        <attr name="customBorderRadius" />
        <attr name="customBorderColor" />
        <attr name="colorTheme" />
    </declare-styleable>
    <declare-styleable name="PaymentMethodView">
        <attr name="colorTheme" />
        <attr name="paymentMethodVariant" format="enum">
            <enum name="standard" value="0" />
            <enum name="compact" value="1" />
            <enum name="logo_compact" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ExpressCheckoutCalloutView">
        <attr name="colorTheme" />
        <attr name="borderStyle" />
        <attr name="customBorderRadius" />
        <attr name="customBorderColor" />
    </declare-styleable>
    <declare-styleable name="PurchaseConfirmationView">
        <attr name="colorTheme" />
        <attr name="borderStyle" />
        <attr name="customBorderRadius" />
        <attr name="customBorderColor" />
    </declare-styleable>
    <declare-styleable name="PurchaseConfirmationByOrderIdView">
        <attr name="colorTheme" />
        <attr name="borderStyle" />
        <attr name="customBorderRadius" />
        <attr name="customBorderColor" />
    </declare-styleable>
    <declare-styleable name="CampaignLinkView">
        <attr name="campaignName" format="string" />
        <attr name="colorTheme" />
        <attr name="borderStyle" />
        <attr name="customBorderRadius" />
        <attr name="customBorderColor" />
    </declare-styleable>
    <declare-styleable name="CatchLogoView">
        <attr name="catchLogoSize" />
        <attr name="colorTheme" />
    </declare-styleable>
</resources>
